// Place your settings in this file to overwrite default and user settings.
// NOTE: This will be in version control and apply for all devs
{
	"files.exclude": {

		// Defaults
		"**/.git": true,
		"**/.DS_Store": true,

		// This excludes all node_modules folders from the explore tree
		"**/node_modules": true,

		// Root only
		// "node_modules": true,

		// Build dir
		"dist": true,

		// Generated files for test reports
		"test/unit/coverage/lcov-report/components/**/*": true,
		"test/unit/coverage/lcov-report/router/**/*": true,
		"test/unit/coverage/lcov-report/store/**/*": true

	},

	"files.associations": {
        "*.htmllintrc": "json",
        "*.stylelintrc": "json"
    },

    // Emmet should be enabled on .vue files
    "emmet.syntaxProfiles": {
        "vue-html": "html",
        "vue": "html"
    },

    // Settings for VS Code's ESLint extension
    "eslint.validate": [

        // Defaults
        "javascript",
        "javascriptreact",

        // Inline HTML
        "html",

        // Should also go through .vue files
        "vue"

    ],

    // CSS
    "css.validate": false,
    "scss.validate": false,
    "stylelint.enable": true,

	// Project TODO/FIXME highlighting with plugin
	// https://marketplace.visualstudio.com/items?itemName=wayou.vscode-todo-highlight
	"todohighlight.isCaseSensitive": true,
	"todohighlight.keywords": [
		{
			"text": "BUG",
			"color": "white",
			"backgroundColor": "tomato",
			"overviewRulerColor": "tomato"
		},
		{
			"text": "FIXME:",
			"color": "hotpink",
			"backgroundColor": "transparent",
			"overviewRulerColor": "hotpink"
		},
		{
			"text": "FIXME",
			"color": "hotpink",
			"backgroundColor": "transparent",
			"overviewRulerColor": "hotpink"
		},
		{
			"text": "HACK",
			"color": "yellow",
			"backgroundColor": "transparent",
			"overviewRulerColor": "yellow"
		},
		{
			"text": "TODO:",
			"color": "mediumseagreen",
			"backgroundColor": "transparent",
			"overviewRulerColor": "mediumseagreen"
		},
		{
			"text": "TODO",
			"color": "mediumseagreen",
			"backgroundColor": "transparent",
			"overviewRulerColor": "mediumseagreen"
		},
		{
			"text": "NOTE",
			"color": "gainsboro",
			"backgroundColor": "transparent",
			"overviewRulerColor": "gainsboro"
		},
		{
			"text": "REVIEW",
			"color": "orange",
			"backgroundColor": "transparent",
			"overviewRulerColor": "orange"
		}
	]

}
